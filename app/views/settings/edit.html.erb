<div class="settings-page">
  <row>
    <div class="col s12">
      <div class="card">
        <%= form_for @setting, url: update_settings_path(@setting), method: :put do |form| %>
          <div class="card-content">
            <span class="card-title">Settings</span>
            <div class="row">
              <div class="input-field col s3">
                <%= form.text_field :statement_start_day %>
                <label for="setting_statement_start_day">Billing statement start day</label>
              </div>
            </div>
          </div>
          <div class="card-action">
            <a href="#" id="settings-page-save">Save</a>
            <a href="#" id="settings-page-cancel">Cancel</a>
          </div>
        <% end %>
      </div>
    </div>
  </row>
</div>

<% deferred_javascript do %>
  app.Page.Settings();
<% end %>
