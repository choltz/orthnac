<div class="dashboard-page">
  <div class="row">

    <div class="col s3">
      <div class="card center-align">
        <div class="card-content">
          <span class="card-title">Spent this month</span>

          <h5 class="monthly-sum-to-date">
            <%= number_to_currency(Transaction.monthly_sum_to_date) %>
          </h5>
        </div>
      </div>
    </div>

    <div class="col s9">
      <div class="card">
        <div class="card-content">
          <span class="card-title">Spending totals by month</span>

          <div class="amount-sums-by-month">
            Graph goes here
          </div>
          <div class="amount-sums-by-month-for-tests">
            Get real data here - hidden for tests
            <% Transaction.amount_sums_by_month.each do |item| %>
              <span class="month-<%= item.month %>"><%= number_to_currency(item.sum) %></span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
