<ul id="account-dropdown" class="account-dropdown dropdown-content">
  <% Account.all.each do |account| %>
    <li><a href="#!"><%= account.name %></a></li>
  <% end %>

  <li class="divider"></li>
  <li><a href="#!">All Accounts</a></li>
</ul>
<nav>
  <div class="nav-wrapper">
    <a href="#!" class="brand-logo">Orthnac</a>

    <div class="search-wrapper">
      <%= form_tag search_path, method: :get do |form| %>
        <%= search_field_tag :search, params[:search], placeholder: 'search transactions' %>
       <button id="search_transactions_button" type="submit">Search</button>
      <% end %>
    </div>

    <ul class="navigation-menu right hide-on-med-and-down">
      <% %w{ dashboard imports transactions settings}.each do |link| %>
        <li class="<%= controller_name == link ? 'selected' : '' %>">
          <%= link_to link.capitalize, "/#{link}", id: "#{link}-desktop" %>
        </li>
      <% end %>

      <!-- Dropdown Trigger -->
      <li><a class="dropdown-button" href="#!" data-activates="account-dropdown">Account<i class="material-icons right">arrow_drop_down</i></a></li>
    </ul>
  </div>
</nav>
